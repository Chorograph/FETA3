    <exclude name="out/production/FETA3.1/seed_graphs/**"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.feta3.1">
    <patternset refid="excluded.from.module.feta3.1"/>
  </patternset>
  
  <path id="feta3.1.module.sourcepath">
    <dirset dir="${module.feta3.1.basedir}/../../NaomiFETA">
      <include name="FETA3.1"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.feta3.1" depends="compile.module.feta3.1.production,compile.module.feta3.1.tests" description="Compile module FETA3.1"/>
  
  <target name="compile.module.feta3.1.production" depends="register.custom.compilers" description="Compile module FETA3.1; production classes">
    <mkdir dir="${feta3.1.output.dir}"/>
    <javac2 destdir="${feta3.1.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.feta3.1}/javac">
      <compilerarg line="${compiler.args.feta3.1}"/>
      <bootclasspath refid="feta3.1.module.bootclasspath"/>
      <classpath refid="feta3.1.module.production.classpath"/>
      <src refid="feta3.1.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.feta3.1"/>
    </javac2>
    
    <copy todir="${feta3.1.output.dir}">
      <fileset dir="${module.feta3.1.basedir}">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.feta3.1.tests" depends="register.custom.compilers,compile.module.feta3.1.production" description="compile module FETA3.1; test classes" unless="skip.tests"/>
  
  <target name="clean.module.feta3.1" description="cleanup module">
    <delete dir="${feta3.1.output.dir}"/>
    <delete dir="${feta3.1.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.feta3.1" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.feta3.1" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.feta3.1:jar" value="${basedir}/out/artifacts/FETA3_1_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.FETA3.1.jar" value="${artifacts.temp.dir}/FETA3.1.jar"/>
  </target>
  
  <target name="artifact.feta3.1:jar" depends="init.artifacts, compile.module.feta3.1" description="Build &#39;FETA3.1:jar&#39; artifact">
    <property name="artifact.temp.output.feta3.1:jar" value="${artifacts.temp.dir}/FETA3_1_jar"/>
    <mkdir dir="${artifact.temp.output.feta3.1:jar}"/>
    <jar destfile="${temp.jar.path.FETA3.1.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${feta3.1.output.dir}"/>
      <zipfileset src="${path.variable.maven_repository}/com/googlecode/json-simple/json-simple/1.1.1/json-simple-1.1.1.jar"/>
      <zipfileset src="${path.variable.maven_repository}/junit/junit/4.10/junit-4.10.jar"/>
      <zipfileset src="${path.variable.maven_repository}/org/hamcrest/hamcrest-core/1.1/hamcrest-core-1.1.jar"/>
    </jar>
    <copy file="${temp.jar.path.FETA3.1.jar}" tofile="${artifact.temp.output.feta3.1:jar}/FETA3.1.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.feta3.1:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.feta3.1:jar}"/>
    <copy todir="${artifact.output.feta3.1:jar}">
      <fileset dir="${artifact.temp.output.feta3.1:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>