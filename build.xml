    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module FETA3.1 -->
  
  <dirname property="module.feta3.1.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.feta3.1" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.feta3.1" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.feta3.1" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.feta3.1" value="-encoding UTF-8 -source 9 -target 9 ${compiler.args}"/>
  
  <property name="feta3.1.output.dir" value="${module.feta3.1.basedir}/out/production/FETA3.1"/>
  <property name="feta3.1.testoutput.dir" value="${module.feta3.1.basedir}/out/test/FETA3.1"/>
  
  <path id="feta3.1.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="feta3.1.module.production.classpath">
    <path refid="${module.jdk.classpath.feta3.1}"/>
    <path refid="library.com.googlecode.json-simple:json-simple:1.1.1.classpath"/>
  </path>
  
  <path id="feta3.1.runtime.production.module.classpath">
    <pathelement location="${feta3.1.output.dir}"/>
    <path refid="library.com.googlecode.json-simple:json-simple:1.1.1.classpath"/>
  </path>
  
  <path id="feta3.1.module.classpath">
    <path refid="${module.jdk.classpath.feta3.1}"/>
    <pathelement location="${feta3.1.output.dir}"/>
    <path refid="library.com.googlecode.json-simple:json-simple:1.1.1.classpath"/>
  </path>
  
  <path id="feta3.1.runtime.module.classpath">
    <pathelement location="${feta3.1.testoutput.dir}"/>
    <pathelement location="${feta3.1.output.dir}"/>
    <path refid="library.com.googlecode.json-simple:json-simple:1.1.1.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.feta3.1">
    <patternset refid="ignored.files"/>
    <exclude name="out/**"/>
    <exclude name="out/artifacts/**"/>
    <exclude name="out/artifacts/FETA3_1_jar/**"/>
    <exclude name="out/production/**"/>
    <exclude name="out/production/FETA3.1/**"/>
    <exclude name="out/production/FETA3.1/out/**"/>
    <exclude name="out/production/FETA3.1/out/artifacts/**"/>
    <exclude name="out/production/FETA3.1/out/artifacts/FETA3_1_jar/**"/>
    <exclude name="out/production/FETA3.1/data/**"/>
    <exclude name="out/production/FETA3.1/feta/**"/>
    <exclude name="out/production/FETA3.1/feta/actions/**"/>
    <exclude name="out/production/FETA3.1/feta/actions/stoppingconditions/**"/>
    <exclude name="out/production/FETA3.1/feta/network/**"/>
    <exclude name="out/production/FETA3.1/feta/readnet/**"/>
    <exclude name="out/production/FETA3.1/feta/writenet/**"/>
    <exclude name="out/production/FETA3.1/feta/operations/**"/>
    <exclude name="out/production/FETA3.1/feta/objectmodels/**"/>
    <exclude name="out/production/FETA3.1/.idea/**"/>
    <exclude name="out/production/FETA3.1/.idea/artifacts/**"/>
    <exclude name="out/production/FETA3.1/.idea/libraries/**"/>
    <exclude name="out/production/FETA3.1/.idea/inspectionProfiles/**"/>
